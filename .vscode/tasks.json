{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: build - tsconfig.json",
      "type": "shell",
      "command": "tsc",
      "args": ["-p", "${workspaceFolder}/tsconfig.json"],
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": ["$tsc"]
    }
  ]
}

